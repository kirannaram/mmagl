/***************************************
           CONTENT-BLOCK
***************************************/

.content-block {
  padding: 10px;
}

.content-block__title {
  color: $gray-dark;
  background: $gray-lighter;
  padding: 10px;
  border-bottom: 1px solid $gray-lighter;
  font-size: $font-size-h4;
  line-height: $line-height-computed;
}

.content-block__text {
  padding: 10px;
}

.content-block__text--border-radius {
  border: 1px solid $gray-dark;
  border-radius: 50%;
  padding: 1px 5px;
}

.content-block__row--long {
  max-width: 320px;
}

.content-block__row--short {
  max-width: 240px;
}

.content-block__row--with-border {
  padding: 10px 0;
  border-bottom: 1px solid #bebbb4;
}

.content-block__unordered-list {
  padding: 0 1.75rem;
}

.content-block__ordered-list {
  @media (min-width: $screen-sm-max) {
    padding: 1rem;
    margin-bottom: 0;
  }
  @media (max-width: $screen-xs) {
    padding-left: .5rem;
  }
}

.content-block__instrumental-panel {
  position: relative;
  max-width: 1322px;
}

.content-block__instrumental-panel-spot {
  position: absolute;
  width: 30px;
  height: 30px;
  line-height: 20px;
  border: 2px solid white;
  border-radius: 50%;
  box-sizing: border-box;
  /* background-image: url(../images/highlightIcon.png);
            background-repeat: no-repeat; */
  background-color: #0099ff;
  text-align: center;
  color: white;
  font-size: 23px;
  cursor: pointer;
  transition: all .4s ease-in-out;
  -webkit-transition: all .4s ease-in-out;
  -moz-transition: all .4s ease-in-out;
  -ms-transition: all .4s ease-in-out;
}

.content-block__instrumental-panel-spot:after {
  content: '+';
}

.content-block__instrumental-panel-spot:hover {
  transform: scale(1.3);
  -webkit-transform: scale(1.3);
  -moz-transform: scale(1.3);
  -ms-transform: scale(1.3);
}

.content-block__instrumental-panel-spot--one {
  top: 62.7%;
  left: 10%;
}

.content-block__instrumental-panel-spot--two {
  top: 42%;
  left: 19%;
}

.content-block__instrumental-panel-spot--three {
  top: 61%;
  left: 22.2%;
}

.content-block__instrumental-panel-spot--four {
  top: 17%;
  left: 36%;
}

.content-block__instrumental-panel-spot--five {
  top: 43%;
  left: 50%;
}

.content-block__instrumental-panel-spot--six {
  top: 84%;
  left: 74.5%;
}

.content-block__instrumental-panel-spot--seven {
  top: 62%;
  left: 88.5%;
}
