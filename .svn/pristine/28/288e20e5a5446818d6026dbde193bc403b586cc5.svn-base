/***************************************
           HEADER
***************************************/
.header
{
    display: flex;
    min-height: 100px;
    height: 10vh;
    padding-left: 15px;
    justify-content: start;
    background-color: $white;
    margin: 0px -15px;
    align-items: center;

    @media (max-width: $screen-sm-max) {
        height: auto;
    }

}

    .header__logo {
        @media(max-width: $screen-sm-max) {
            img {
                width: 80%;
            }
        }
    }

    .header__right-container {
        display: flex;
        justify-content: space-around;
    }

        .header__right-container-item {
            margin-left: 20px;
            min-width: 150px;
            font-weight:bold;
            font-size: 16px;
        }