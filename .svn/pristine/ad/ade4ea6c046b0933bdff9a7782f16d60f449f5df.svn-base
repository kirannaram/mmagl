/* HOME */


.home{
	padding: 0px;
	overflow: hidden;
	app-home {
		width: 100%;
	}
	.page-content{
		position: relative;
		margin-top: 0px;
		height: 70vh;
		overflow: hidden;
		@media (min-width: $screen-sm-max){
		
			display: flex;
			height: 86vh;
			margin-top:-100px;
		}
	}
	
	.menu-column{
		flex-basis: 100%;
		align-items: normal;
		height: auto;
		position: relative;
		top: 100px;
			z-index: 1;
		@media (min-width: $screen-sm-max ) {
			display: flex;
			margin-top: 0px;
			flex-basis: 50%;
			align-items: center;
		}
	}
	
	.content-column {
		
		flex-basis: 50%;
		float: left;
		
		background-image: url(../images/home-hero.jpg);
		background-size: cover;
		background-position: center; 
		
			width: 100%;
			height: 100%;
		@media (max-width: $screen-sm-max) {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
		}
	}

	.nav__mobile,
	.nav__toggle{
		display: none;
	}
}


.home__form{
	float: left;
	width: 50%;
	height: 100vh;
	
	@media (max-width: $screen-sm-max) {
		position: absolute;
		width: 100%;
		z-index: 7;
	}
	
}


.home__choose-vehicle { 
	margin: 0px auto;
	padding: 10px 20px;
	-ms-grid-row-align: center;
	    align-self: center;
	width: 60%;
	min-width: 300px;
	background-color: rgba(255,255,255,0.8);
	border-radius: 10px;
	
	@media (min-width: $screen-sm-max){
		background-color: inherit !important;
		min-width: auto;
	}
	/*outline: 10px solid rgba(255, 255, 255, 0.5);*/
}
.home__choose-vehicle-title{
	color: $blue;
	font-size: 24px;
	margin-bottom: 20px;
}


